@model TrashHandling.Models.TrashCollectionViewModel
<!--Entities.Person-->

<h1>Edit Trash Collection</h1>

@if (Model is null)
{
    <div class="alert alert-info">
        No Records Found
    </div>
}
else
{
    <form asp-controller="TrashCollections" asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mt-3">
            <label asp-for="TruckPlateNumber"></label>
            <input type="text" class="form-control" asp-for="TruckPlateNumber" />
            <span asp-validation-for="TruckPlateNumber" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="StaffAssigned"></label>
            <input type="text" class="form-control" asp-for="StaffAssigned" />
            <span asp-validation-for="StaffAssigned" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="TypeofTrash"></label>
            <input type="text" class="form-control" asp-for="TypeofTrash" />
            <span asp-validation-for="TypeofTrash" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="DeployedDate"></label>
            <input type="datetime-local" class="form-control" asp-for="DeployedDate" />
            <span asp-validation-for="DeployedDate" clss="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}

