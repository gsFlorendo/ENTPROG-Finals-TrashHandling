@{
}

@model TrashHandling.Models.ShopViewModel
<!--Entities.Person-->

<h1>Edit Shop</h1>
@if (Model is null)
{
    <div class="alert alert-info">
        No Records Found
    </div>
}
else
{
    <form asp-controller="Shops" asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mt-3">
            <label asp-for="ShopName"></label>
            <input type="text" class="form-control" asp-for="ShopName" />
            <span asp-validation-for="ShopName" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="ShopAddress"></label>
            <input type="text" class="form-control" asp-for="ShopAddress" />
            <span asp-validation-for="ShopAddress" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="ShopContact"></label>
            <input type="text" class="form-control" asp-for="ShopContact" />
            <span asp-validation-for="ShopContact" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}

