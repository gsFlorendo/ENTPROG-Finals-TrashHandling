@model TrashHandling.Models.FacilityViewModel
<!--Entities.Person-->

<h1>Edit Facility</h1>
@if (Model is null)
{
    <div class="alert alert-info">
        No Records Found
    </div>
}
else
{
    <form asp-controller="Facilities" asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mt-3">
            <label asp-for="FacilityName"></label>
            <input type="text" class="form-control" asp-for="FacilityName" />
            <span asp-validation-for="FacilityName" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="FacilityAddress"></label>
            <input type="text" class="form-control" asp-for="FacilityAddress" />
            <span asp-validation-for="FacilityAddress" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}

